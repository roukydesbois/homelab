---
# Example Ansible Vault file for secure NTFY authentication
#
# To use this file:
# 1. Copy this file to all_vault.yml
# 2. Edit the values below with your actual credentials
# 3. Encrypt the file: ansible-vault encrypt group_vars/all_vault.yml
# 4. Reference these variables in your main all.yml file
#
# Usage examples in all.yml:
# ntfy_username: "{{ vault_ntfy_username }}"
# ntfy_password: "{{ vault_ntfy_password }}"
# ntfy_token: "{{ vault_ntfy_token }}"

# Method 1: Basic Authentication
vault_ntfy_username: "your_ntfy_username"
vault_ntfy_password: "your_secure_password"

# Method 2: Token Authentication (recommended)
vault_ntfy_token: "tk_your_access_token_here"

# Optional: Alternative server configurations for different environments
vault_ntfy_prod_url: "https://ntfy.example.com"
vault_ntfy_prod_token: "tk_production_token"
vault_ntfy_dev_url: "https://ntfy-dev.example.com"
vault_ntfy_dev_token: "tk_development_token"
